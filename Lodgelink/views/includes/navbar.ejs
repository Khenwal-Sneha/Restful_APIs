<!-- Link to external CSS for navbar -->
<link rel="stylesheet" href="/css/navbar.css">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex">
    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-solid fa-hotel"></i>
      <p class="logo mb-0">LodgeLink</p>
    </a>
    <!-- Toggler for responsive navbar -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsive"
      aria-controls="offcanvasResponsive">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Normal navbar -->
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <a class="nav-link nav-n" href="/">Explore</a>
        </li>
        <li class="nav-item">
          <a class="nav-link nav-n" href="/listings/new">Lodgelink your home</a>
        </li>
        <% if (currentUser) { %>
          <!-- Profile dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle nav-profile" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="<%= currentUser.profile.url %>" alt="Profile Picture" class="profile-pic">
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/<%= currentUser.username %>">View Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        <% } else { %>
          <!-- Login and Signup links -->
          <li class="nav-item">
            <a class="nav-link nav-n" href="/signup"><b>Signup</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link nav-n" href="/login"><b>Login</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Responsive navbar -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasResponsive" aria-labelledby="offcanvasResponsiveLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasResponsiveLabel">Your Options!</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="navbar-nav">
      <a class="nav-link nav-r" href="/">Explore</a>
      <a class="nav-link nav-r" href="/listings/new">Create Listing</a>
      <% if (currentUser) { %>
        <a class="nav-link nav-r" href="/<%= currentUser.username %>">View Profile</a>
        <a class="nav-link nav-r" href="/logout">Logout</a>
      <% } else { %>
        <a class="nav-link nav-r" href="/signup">Signup</a>
        <a class="nav-link nav-r" href="/login">Login</a>
      <% } %>
    </div>
  </div>
</div>
